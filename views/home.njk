{% extends "layout.njk" %}
{% block content %}
  {% include "partials/filterHeader.njk" %}
  <h1>Suggested Users</h1>
    <!-- conditional -->
    {% if users.length > 0 %}
      <ul>
        {% for user in users %}
        {% if user.suggested == true %}
          <li>
            <a href="#">
              <img src={{user.image}} alt={{user.name}}>
              <div>
                <h2>{{user.name}}</h2>
                <p>{{user.description}}</p>
                <ul>
                  {% for genre in user.genres %}
                    <li>{{genre}}</li>
                  {% endfor %}
                </ul>
              </div>
            </a>
          </li>
          {% endif %}
        {% endfor %}
      </ul>
      {% else %}
      <p>Can't find any suggested users.</p>
    {% endif %}

  <h1>Results</h1>
    <!-- conditional -->
    {% if users.length > 0 %}
      <ul>
        {% for user in users %}
          <li>
            <a href="#">
              <img src={{user.image}} alt={{user.name}}>
              <div>
                <h2>{{user.name}}</h2>
                <p>{{user.description}}</p>
                <ul>
                  {% for genre in user.genres %}
                    <li>{{genre}}</li>
                  {% endfor %}
                </ul>
              </div>
            </a>
          </li>
        {% endfor %}
      </ul>
      {% else %}
      <p>Can't find any users based on your filters.</p>
    {% endif %}

  <div id="filterMenu">
    <h1>Filters<h1>
    <h2>Genres<h2>
    <input type="text" placeholder="Search for genres...">
    <ul>
      <li><label name="genres" value="genres">Rock<label><input type="checkbox" name="genres" value="Rock"></li>
      <li><label name="genres" value="genres">Dance-pop<label><input type="checkbox" name="genres" value="Dance-pop"></li>
    </ul>
    <h2>Artists<h2>
    <input type="text" placeholder="Search for artists...">
    <ul>
      <li><label name="artists" value="Rick Astley">Rick Astley<label><input type="checkbox" name="Rick Astley" value="Rick Astley"></li>
      <li><label name="artists" value="">Nickelback<label><input type="checkbox" name="Nickelback" value="Nickelback"></li>
    </ul>
    <button id="filterDoneButton">DONE</button>
  </div>

{% endblock %}